  dist_option        = 2           !! 1 : Log-nomal distribution, 2 : Gamma distribution
  drop_column_num    = 100         !! nbin 
  drop_min_diameter  = 1.0e-6      !! unit = m
  drop_max_diameter  = 0.01        !! unit = m
/

